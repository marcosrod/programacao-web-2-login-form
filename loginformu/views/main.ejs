<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="stylesheets/style.css" />
    <title>Login</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  </head>

  <body>
    <header class="main-header">
      <div>
        <a style="margin-left: 90%;" href="/logout" class="nav-header-link logout-bt">Sair</a>
      </div>
    </header>

    <div style="padding: 15%; margin-left: 25%;">
        <label id="sessionName" style="margin-left: 20%; color: black; font-size: 40px;"></label>
    </div>

    <div class="container" style="margin-left: 35%; margin-top: 15%">
        <h2>Mudar nome do usuário da sessão</h2>
        <form action="/salvanome" method="POST">
          <div class="form-group">
            <label for="name">Nome</label>
            <input type="text" class="form-control" id="name" aria-describedby="name" placeholder="Inserir nome" name="name" required>
          </div>
          <button type="submit" class="btn btn-primary">Mudar Nome</button>
        </form>
  </body>

  <script>
      $(document).ready(function () {

        let cookieValue = readCookie("sessionName");
        $("#sessionName").text(cookieValue);
    });

    function readCookie(name) {
        var nameEQ = name + "=";
        var ca = document.cookie.split(';');
        for (var i = 0; i < ca.length; i++) {
            var c = ca[i];
            while (c.charAt(0) == ' ') c = c.substring(1, c.length);
            if (c.indexOf(nameEQ) == 0) return c.substring(nameEQ.length, c.length);
        }
        return null;
    }
  </script>
</html>